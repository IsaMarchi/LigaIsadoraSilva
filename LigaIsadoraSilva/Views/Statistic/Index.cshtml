@model dynamic
@{
    ViewData["Title"] = "Football Statistics";
}

<h2>Games Statistic</h2>

<button onclick="location.href='@Url.Action("TeamStandings", "Statistic")'" class="btn btn-primary">
    Ver Classificação Geral
</button>

<canvas id="myChart" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script> 
@* Componente de terceiro *@

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Gols Casa', 'Gols Visitante', 'Total de Jogos', 'Vitórias Casa', 'Vitórias Visitante'],
            datasets: [{
                label: 'Estatísticas dos Jogos',
                data: [
    @Model.totalHomeGoals,
    @Model.totalVisitGoals,
    @Model.totalGames,
    @Model.homeWins,
    @Model.visitWins
                    ],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
