@model IEnumerable<LigaIsadoraSilva.Data.Entities.Player>

@{
    ViewData["Title"] = "Players";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    .table {
        background-color: white;
        color: black;
    }

        .table th, .table td {
            color: black;
        }

    h1 {
        color: white;
    }

    .btn-primary {
        background-color: #66ff66;
        border-color: #66ff66;
        color: black;
        font-weight: bold;
    }

    .action-buttons {
        white-space: nowrap;
    }

        .action-buttons a {
            margin-right: 5px;
        }
</style>

<h1>Players List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Club.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-sm" style="background-color: #00cccc; color: white;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm" style="background-color: #99cc33; color: white;" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-sm" style="background-color: #ff6666; color: white;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

