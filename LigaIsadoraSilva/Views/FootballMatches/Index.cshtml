@model IEnumerable<LigaIsadoraSilva.Data.Entities.FootballMatch>

@{
    ViewData["Title"] = "Matches";
}

<h1>Matches</h1>

<p>
    <a class="btn btn-primary" asp-action="GenerateMatches">Generate Matches</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeTeam.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitTeam.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitGoals)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeTeam.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitTeam.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeGoals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitGoals)
                </td>
                <td>
                    <div class="action-buttons">
                        <!-- Verifica se o jogo foi finalizado -->
                        @if (!item.IsFinalized)
                        {
                            <!-- Botão de Editar -->
                            <a class="btn btn-sm" style="background-color: #00cccc; color: white;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            <!-- Botão de Inserir Resultado -->
                            <a class="btn btn-sm" style="background-color: #66ff66; color: white;" asp-action="Result" asp-route-id="@item.Id">Result</a>

                            <!-- Botão de Finalizar, disponível apenas se os gols já foram inseridos -->
                            @if (item.HomeGoals != null && item.VisitGoals != null)
                            {
                                <a class="btn btn-sm" style="background-color: #ff6666; color: white;" asp-action="Finalise" asp-route-id="@item.Id">Finalise</a>
                            }
                        }
                        else
                        {
                            <!-- Mensagem para jogos finalizados -->
                            <span class="badge badge-secondary">Finalized Game</span>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
