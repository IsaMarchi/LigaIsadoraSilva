@model IEnumerable<LigaIsadoraSilva.Data.Entities.FootballMatch>

@{
    ViewData["Title"] = "Matches";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    .table {
        background-color: white;
        color: black;
    }

        .table th, .table td {
            color: black;
        }

    h1 {
        color: white;
    }

    .btn-primary {
        background-color: #66ff66;
        border-color: #66ff66;
        color: black;
        font-weight: bold;
    }

    .action-buttons {
        white-space: nowrap;
    }

        .action-buttons a {
            margin-right: 5px;
        }
</style>

<h1>Matches</h1>
@if (User.IsInRole("Admin"))
 {
    <p>
        <a class="btn btn-primary" asp-action="GenerateMatches">Generate Matches</a>
        
    </p>
 }

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                Home Team
            </th>
            <th>
                Visit Team
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeGoals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitGoals)
            </th>
            <th>
                Yellow Cards
            </th>
            <th>
                Red Cards
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeTeam.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitTeam.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeGoals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VisitGoals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YellowCards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RedCards)
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="action-buttons">
                            @if (!item.IsFinalized)
                            {
                                <a class="btn btn-sm" style="background-color: #00cccc; color: white;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm" style="background-color: #66ff66; color: white;" asp-action="Result" asp-route-id="@item.Id">Result</a>
                                <a class="btn btn-sm" style="background-color: #ff3333; color: white;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                <a class="btn btn-sm" style="background-color: #ff6666; color: white;" asp-action="Finalise" asp-route-id="@item.Id">Finalise</a>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Finalized Game</span>
                            }
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
