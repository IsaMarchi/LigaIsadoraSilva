@model LigaIsadoraSilva.Data.Entities.FootballMatch

@{
    ViewData["Title"] = "Result";
}

<h1>Inserir Resultado</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Result">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HomeGoals" class="control-label"></label>
                <input asp-for="HomeGoals" class="form-control" />
                <span asp-validation-for="HomeGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitGoals" class="control-label"></label>
                <input asp-for="VisitGoals" class="form-control" />
                <span asp-validation-for="VisitGoals" class="text-danger"></span>
            </div>
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
