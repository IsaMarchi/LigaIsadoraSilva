@model LigaIsadoraSilva.Data.Entities.FootballMatch

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    h1, h3, h4 {
        color: white;
    }

    .btn-edit {
        background-color: #00cc66;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-back {
        background-color: #00cccc;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover, .btn-edit:hover {
            background-color: #00b3b3;
            color: white;
        }

    dl {
        margin: 0;
    }
</style>

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Football Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeTeam.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VisitTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisitTeam.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeGoals)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VisitGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisitGoals)
        </dd>
    </dl>  
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group-inline">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a class="btn-back" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>


