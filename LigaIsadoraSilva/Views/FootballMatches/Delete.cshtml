@model LigaIsadoraSilva.Data.Entities.FootballMatch

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    h1, h3, h4 {
        color: white;
    }

    .btn-edit {
        background-color: #00cc66;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-back {
        background-color: #00cccc;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover, .btn-edit:hover {
            background-color: #00b3b3;
            color: white;
        }

    dl {
        margin: 0;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Football Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeTeam.Coach)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VisitTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisitTeam.Coach)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeGoals)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VisitGoals)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VisitGoals)
        </dd>
    </dl>
</div>
<div class="form-group-inline">
    <a class="btn-edit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn-back" asp-action="Index">Back to List</a>
</div>
