@model LigaIsadoraSilva.Data.Entities.FootballTeam

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    h1, h4 {
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-back {
        background-color: #00cccc;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover, .btn-primary:hover {
            background-color: #0056b3;
            color: white;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .text-danger {
        color: red;
    }

    .button-group {
        display: flex;
        justify-content: flex-start;
        margin-top: 20px;
    }
</style>

<h1>Edit</h1>

<h4>Football Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- Image Field -->
            <div class="form-group">
                <label asp-for="ImageFullPath" class="control-label">Player Photo</label>
                <div>
                    <img src="@Model.ImageFullPath" alt="Photo" class="img-thumbnail" style="max-width: 150px;" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach" class="control-label"></label>
                <input asp-for="Coach" class="form-control" />
                <span asp-validation-for="Coach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stadium" class="control-label"></label>
                <input asp-for="Stadium" class="form-control" />
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foundation" class="control-label"></label>
                <input asp-for="Foundation" type="date" class="form-control" />
                <span asp-validation-for="Foundation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatchesPlayed" class="control-label"></label>
                <input asp-for="MatchesPlayed" class="form-control" />
                <span asp-validation-for="MatchesPlayed" class="text-danger"></span>
            </div>
            <div class="button-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn-back" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
