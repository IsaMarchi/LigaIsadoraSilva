@model LigaIsadoraSilva.Data.Entities.FootballTeam

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    h1, h3, h4 {
        color: white;
    }

    .btn-edit {
        background-color: #00cc66;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-back {
        background-color: #00cccc;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        margin-left: 10px;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover, .btn-edit:hover {
            background-color: #00b3b3;
            color: white;
        }

    .team-details {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 20px;
    }

        .team-details dl {
            margin: 0;
            flex: 1;
        }

    .logo-container {
        text-align: center;
        margin-left: 20px; /* Espaço entre texto e logo */
    }

        .logo-container img {
            max-width: 250px;
            border: 2px solid white; /* Borda para destacar a logo */
        }
</style>

<h1>Details</h1>

<div class="team-details">
    <!-- Coluna das informações do time -->
    <div class="team-info">
        <h4>@Model.Name </h4>
        <hr />
        <dl class="row">

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Coach)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Coach)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Stadium)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Stadium)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Foundation)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Foundation)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Points)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Points)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MatchesPlayed)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MatchesPlayed)</dd>
        </dl>
    </div>

    <!-- Coluna para a logo -->
    <div class="logo-container">
        <img src="@Model.ImageFullPath" alt="Logo" class="img-thumbnail" />
    </div>
</div>

<!-- Botões de ação -->
<div class="form-group-inline">
    <a class="btn-edit" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn-back" asp-action="Index">Back to List</a>
</div>

