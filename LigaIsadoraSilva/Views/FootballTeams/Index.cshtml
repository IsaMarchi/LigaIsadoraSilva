@model IEnumerable<LigaIsadoraSilva.Data.Entities.FootballTeam>

@{
    ViewData["Title"] = "Teams";
}

<style>
    body {
        background-color: black;
        color: white;
    }

    .table {
        background-color: white;
        color: black;
    }

        .table th, .table td {
            color: black;
        }

    h1 {
        color: white;
    }

    .btn-primary {
        background-color: #66ff66;
        border-color: #66ff66;
        color: black;
        font-weight: bold;
    }

    /* Custom CSS to make the buttons inline */
    .action-buttons {
        white-space: nowrap; /* Prevents wrapping to next line */
    }

        .action-buttons a {
            margin-right: 5px; /* Adds spacing between the buttons */
        }
</style>

<h1>Teams List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">New Team</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stadium)
            </th>
            <th>
                Logo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foundation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchesPlayed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stadium)
                </td>
                <td>
                    <img src="@item.ImageFullPath" alt="Image" style="max-width:100px; max-height:100px;" />
                </td>
                <td>
                    @item.Foundation.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatchesPlayed)
                </td>
                <td>
                    <div class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #00cccc; color: white;">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #99cc33; color: white;">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #ff6666; color: white;">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

